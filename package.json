{
  "name": "lofi-project-management",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@vitest/coverage-v8": "^2.0.5",
    "husky": "^9.1.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
