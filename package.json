{
  "name": "lofi-project-management",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky",
    "check:docs": "pnpm exec ts-node -T scripts/check-tsdoc.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@vitest/coverage-v8": "^2.0.5",
    "husky": "^9.1.4",
    "lint-staged": "^16.2.7",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "vitest related --run --passWithNoTests"
    ]
  }
}
